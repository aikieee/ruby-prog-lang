<div class = "d-flex align-items-center justify-content-center">
    <h1>CREATE NEW BUCKET</h1>
</div>

<div class="d-flex flex-column align-items-center justify-content-center">
    <%= form_for(@bucket) do |f| %>
        <div class="p-2"> <%= f.label :name%> <br> </div>
        <div class="p-2"> <%= f.text_field :name%> <br> </div>
        <div class="p-2"> <br><%= f.label :description%> <br> </div>
        <div class="p-2"> <%= f.text_area :description%> <br> </div>
        <div class="p-2"> <br><%= f.submit "Create Bucket", class: "btn btn-primary"%> <br> </div>
    <% end %>
</div>