<br><br><br>
<div class = "d-flex align-items-center justify-content-center">
    <br><h1><%= "EDIT: " + @bucket.name %></h1>
</div>
<br>

<div class="d-flex flex-column align-items-center justify-content-center">
    <%= form_for(@bucket) do |f| %>
        <div class="p-2"><%= f.label :name%><br></div>
        <div class="p-2"><%= f.text_field :name%><br></div>
        <div class="p-2"><%= f.label :description%><br></div>
        <div class="p-2"><%= f.text_area :description%><br></div>
        <div class="p-2"><%= f.submit "Update Bucket", class: "btn btn-primary"%><br></div>
    <% end %>
    <div><%= button_to "Delete Bucket", @bucket, class: "btn btn-primary", :method => :delete, data: {confirm: 'Are you sure?'} %></div>
</div>
