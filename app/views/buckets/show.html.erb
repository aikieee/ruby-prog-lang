<%= link_to "Back", buckets_path, class: "Back btn-primary" %>
<br>

<div class = "taskName d-flex justify-content-center">
    <%= @bucket.name %>
</div><br>

<p class ="desLabel"> Description: </p>
<p class = "description"><%= @bucket.description %></p><br><br>

<div class="container text-center">
    <div class="row align-items-center justify-content-center">
        <div class="col-4">
            <h5 class="showLabel">Pending Tasks</h5>
        </div>
        <div class="col-4">
            <h5 class="showLabel">Completed Tasks</h5>
        </div>
    </div>


<div class="row align-items-center justify-content-center">
    <div class="col-4">
        <% @bucket.tasks_by_status("Pending").each do |task| %>
        <span class= "content" style="font-weight:normal"><%= link_to task.name, task_path(task) %></span>
        <% end %>
    </div>

    <div class="col-4">
        <% @bucket.tasks_by_status("Completed").each do |task| %>
        <span class= "content" style="font-weight:normal"><%= link_to task.name, task_path(task) %></span>
        <% end %>
    </div>
<div>
<br><br>



<div class="d-flex align-items-center justify-content-center">
    <div class = "col-2">
        <%= button_to "Edit Bucket", edit_bucket_path(@bucket), class:"button btn-primary", method: :get %>
    </div>
