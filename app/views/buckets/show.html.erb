
<div class = "mx-4 mt-4" >
    <%= link_to "Back", buckets_path, class: "btn btn-primary" %>
</div>
<br>
<div class = "d-flex align-items-center justify-content-center">
    <h1><%= @bucket.name %></h1>
</div>

<div class = "d-flex align-items-right justify-content-center">
    <br><p><%= @bucket.description %></p><br><br>
</div>
<br>
<div class="container text-center">
    <div class="row align-items-center justify-content-center">
        <div class="col-4">
            <h5>Pending Tasks</h5>
        </div>
        <div class="col-4">
            <h5>Completed Tasks</h5>
        </div>
    </div>
<div class="row align-items-center justify-content-center">
    <div class="col-4">
        <% @bucket.tasks_by_status("Pending").each do |task| %>
        <h6><span style="font-weight:normal"><%= link_to task.name, task_path(task) %></span><h6>
        <% end %>
    </div>
    <div class="col-4">
        <% @bucket.tasks_by_status("Completed").each do |task| %>
        <h6><span style="font-weight:normal"><%= link_to task.name, task_path(task) %></span><h6>
        <% end %>
    </div>
<div>
<br>
<br>
<div class="d-flex align-items-center justify-content-center">
    <%= button_to "Edit Bucket", edit_bucket_path(@bucket), class:"btn btn-primary", method: :get %>
</div>