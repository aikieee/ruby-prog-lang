<br>
<div class="d-flex align-items-center justify-content-center">
    <h1>TASK LIST</h1>
</div>
<br>

<div class ="container text-center">
 <div class="row align-items-center justify-content-center">
  <div class="col-4">
        <p class= "showLabel">Create Tasks</p>
  </div>
    <div class="col-4">
        <p class= "showLabel">Pending Tasks</p>
   </div>
  <div class="col-4">
        <p class= "showLabel">Completed Tasks</p>
  </div>
 </div>
<div class="row align-self-start justify-content-center">
  <div class="col-4">
        <p><span style="font-weight:normal">
        <%= button_to "+ New", new_task_path, class: "newBtn btn-primary", method: :get %></span></p>
  </div>
    <div class="col-4">
        <% @pending_tasks.each do |task| %>
        <p class= "taskList"><span style="font-weight:normal"><%= link_to task.name, task_path(task) %>
        <button type="button" class="btn btn-outline-danger ml-5" disabled>Priority</button>
        </span></p>
        <% end %>
   </div>
  <div class="col-4">
        <% @completed_tasks.each do |task| %>
        <p class= "taskList"><span style="font-weight:normal"><%= link_to task.name, task_path(task) %></span></p>
        <% end %>
  </div>
 </div>
</div>