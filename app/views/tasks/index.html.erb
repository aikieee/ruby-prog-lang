<br>
<div class="d-flex align-items-center justify-content-center">
    <h1>TASK LIST</h1>
</div>
<br>

<div class ="container text-center">
 <div class="row align-items-center justify-content-center">
  <div class="col-4">
        <p class= "showLabel">Create Tasks</p>
  </div>
    <div class="col-4">
        <p class= "showLabel">Pending Tasks</p>
   </div>
  <div class="col-4">
        <p class= "showLabel">Completed Tasks</p>
  </div>
 </div>
<div class="row align-self-start justify-content-center">
  <div class="col-4">
        <p><span style="font-weight:normal">
        <%= button_to "+ New", new_task_path, class: "newBtn btn-primary", method: :get %></span></p>
  </div>
    <div class="col-4">
        <% @pending_tasks.each do |task| %>
        <p class= "taskList"><span style="font-weight:normal"><%= link_to task.name, task_path(task), class: "link-dark" %><br>
         <button class="btn btn-outline-primary btn-xs" disabled> <%= task.bucket.name %> </button>

        
          <%# <% Task.all.each do |priority_id| %> 
          <%# <% end %> 
              <% if task.priority_id == 1 %>
                    <button class="btn btn-danger btn-xs m-2" disabled>
                        <%= "Urgent" %> 
                    </button>
                <% elsif task.priority_id == 2 %> 
                      <button class="btn btn-warning btn-xs m-2" disabled>
                        <%= "High" %> 
                    </button>
                 <% elsif task.priority_id == 3 %>
                      <button class="btn btn-primary btn-xs m-2" disabled>
                        <%= "Normal" %> 
                    </button>

                <% elsif task.priority_id == 4 %>
                        <button class="btn btn-secondary btn-xs m-2" disabled>
                        <%= "Low" %> 
                    </button>
                <% else %>
                      <%= "No Priority" %> 
                <% end %>
        
        </span></p>
        <% end %>
   </div>
  <div class="col-4">
        <% @completed_tasks.each do |task| %>
        <p class= "taskList"><span style="font-weight:normal"><%= link_to task.name, task_path(task), class: "link-dark" %> <br>
        <button class="btn btn-outline-primary btn-xs m-2" disabled> <%= task.bucket.name %> </button></span></p>
        <% end %>
  </div>
 </div>
</div>